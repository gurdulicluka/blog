---
import { Picture } from "@astrojs/image/components";

interface Props {
  image: {
    src: string;
    alt: string;
  };
}

const { image } = Astro.props;
const pictureBreakpoints =
  "(max-width:480px) 320w,(max-width:767px) 480w,(max-width:991px) 768w, (max-width:1199px) 992w, (max-width:1599px) 1200w, 1600w";
---

<figure
  x-data
  class="shadow-lg md:h-[445px] -mx-6 lg:-mx-0 h-[375px] md:rounded-lg lg:h-[600px] max-h-[55vh] overflow-hidden">
  <Picture
    loading="eager"
    data-image
    fetchpriority="high"
    src={image.src}
    alt={image.alt}
    aspectRatio="16:9"
    widths={[320, 480, 768, 992, 1200, 1600]}
    sizes={pictureBreakpoints}
    formats={["webp"]}
    class="w-full lg:rounded-lg object-cover h-full object-center"
  />
</figure>
