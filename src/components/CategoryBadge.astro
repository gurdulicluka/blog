---
import { slugify } from "../js/utils";
interface Props {
  category: string;
  type?: "secondary";
}
const { category, type } = Astro.props as Props;
---

<!-- TODO Update,dynamically add colors -->
<a
  href={`/blog/category/${slugify(category)}`}
  class={`${
    type === "secondary"
      ? "border-white hover:bg-white hover:text-black"
      : "hover:text-white"
  } inline-block w-fit rounded-2xl border border-black px-4 text-sm transition ease-in hover:bg-black xl:text-base`}
>
  {category}
</a>
