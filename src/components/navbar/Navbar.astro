---
import { Icon } from "astro-icon";
// components
import ThemeSwitchBtn from "./ThemeSwitchBtn.astro";
import SearchBar from "../search/SearchBar.astro";
import Dropdown from "../navbar/Dropdown.astro";
import HamburgerBtn from "./HamburgerBtn.astro";
---

<header
  class="shadow-lg animate__animated bg-base-300 min-h-16 sticky top-0 w-full z-50">
  <nav class="2xl:container navbar justify-between md:px-4">
    <ul class="navbar-start hidden md:flex gap-2 [&>a]:capitalize">
      <li>
        <a href="/" class="btn btn-ghost capitalize">Home</a>
      </li>
      <li>
        <Dropdown />
      </li>
      <li>
        <a href="/contact" class="btn btn-ghost capitalize">Contact</a>
      </li>
    </ul>
    <div class="navbar-center">
      <a
        data-transition
        href="/"
        aria-label="Go to homepage"
        class="group btn btn-ghost">
        <Icon
          name="kodahead"
          height="20"
          class="group-hover:[&>path]:fill-accent outline-none [&>path]:transition"
        />
      </a>
    </div>
    <div class="navbar-end hidden md:flex items-center gap-3">
      <SearchBar />
      <ThemeSwitchBtn />
    </div>
    <div
      x-data
      x-cloak
      x-transition:enter="animate__fadeInRight"
      x-transition:leave="animate__fadeOut"
      x-show="$store.overlays.mobileMenu"
      class="ml-auto mr-2 rounded-lg animate__animated animate__faster bg-base-200">
      <ThemeSwitchBtn />
    </div>
    <HamburgerBtn />
  </nav>
</header>
