---
import { getCollection, CollectionEntry } from "astro:content";
import { slugify, sortByDate } from "../../js/utils";

// components
import MainLayout from "../../layouts/MainLayout.astro";
import ArticleCard from "../../components/ArticleCard.astro";
import HeadingGradient from "../../components/HeadingGradient.astro";

// generate props and params for each path
export async function getStaticPaths() {
  const allPosts = await getCollection("blog");
  const uniqueCategories = [
    ...new Set(
      allPosts.map((post) => {
        return post.data.category;
      })
    ),
  ];
  return uniqueCategories.map((category) => ({
    params: { category: slugify(category) },
    props: {
      name: category,
    },
  }));
}

const { name } = Astro.props;
const { category } = Astro.params;
const allPosts = await getCollection("blog");
const formattedPosts: CollectionEntry<"blog">[] = sortByDate(allPosts);
const categoryPosts = formattedPosts.filter(
  (post) => slugify(post.data.category) === category
);
---

<MainLayout
  title={`${name} - Kodahead`}
  description={`All posts in '${name}' category - Kodahead`}
>
  <HeadingGradient>
    {name}
  </HeadingGradient>
  <section class="container min-h-screen py-12">
    <section
      class="grid grid-cols-1 mt- gap-x-[2%] gap-y-[30px] sm:grid-cols-2 lg:grid-cols-3"
    >
      {
        categoryPosts.map((post) => {
          return <ArticleCard post={post} />;
        })
      }
    </section>
  </section>
</MainLayout>
